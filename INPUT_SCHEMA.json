{
  "title": "Fashion PDP Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrls": {
      "title": "Product URLs",
      "type": "array",
      "description": "List of product detail page URLs to scrape",
      "editor": "select",
      "prefill": [
        {
          "url": "https://www.zara.com/us/en/product/example"
        }
      ]
    },
    "proxyConfig": {
      "title": "Proxy Configuration",
      "type": "object",
      "editor": "proxy",
      "description": "Proxy configuration (uses Apify proxy by default)",
      "properties": {
        "useApifyProxy": {
          "title": "Use Apify Proxy",
          "type": "boolean",
          "default": true,
          "description": "Use Apify residential proxy"
        },
        "apifyProxyGroups": {
          "title": "Apify Proxy Groups",
          "type": "array",
          "description": "Specific proxy groups to use",
          "editor": "stringList"
        }
      },
      "default": {
        "useApifyProxy": true
      }
    },
    "maxConcurrency": {
      "title": "Max Concurrency",
      "type": "integer",
      "description": "Maximum number of pages to process concurrently",
      "default": 5,
      "minimum": 1,
      "maximum": 20
    },
    "waitUntil": {
      "title": "Wait Until",
      "type": "string",
      "description": "When to consider navigation succeeded",
      "enum": [
        "networkidle",
        "domcontentloaded"
      ],
      "default": "networkidle"
    },
    "downloadImages": {
      "title": "Download Images",
      "type": "boolean",
      "description": "If true, will return image binary buffers (for n8n workflow)",
      "default": false
    },
    "mobileUserAgent": {
      "title": "Mobile User Agent",
      "type": "boolean",
      "description": "Use mobile user agent",
      "default": true
    },
    "timeoutSecs": {
      "title": "Timeout (seconds)",
      "type": "integer",
      "description": "Maximum time to wait for page load (seconds)",
      "default": 60,
      "minimum": 10,
      "maximum": 300
    },
    "maxRequestRetries": {
      "title": "Max Request Retries",
      "type": "integer",
      "description": "Maximum number of retries for failed requests",
      "default": 2,
      "minimum": 0,
      "maximum": 5
    },
    "requestHandlerTimeoutSecs": {
      "title": "Request Handler Timeout (seconds)",
      "type": "integer",
      "description": "Timeout for request handler (seconds)",
      "default": 120,
      "minimum": 30,
      "maximum": 600
    }
  },
  "required": [
    "startUrls"
  ]
}

